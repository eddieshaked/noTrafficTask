generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/database.db"
}

model Polygon {
  id        Int      @id @default(autoincrement())
  name      String
  points    String // Stored as JSON string
  userId    String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("polygons")
}

